<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#c5cae9"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:padding="10dp">

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="1"
                    android:textColor="#fff"
                    android:id="@+id/button11"
                    android:background="@drawable/icon_button_selected"/>

                <View
                    android:id="@+id/view1"
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_toRightOf="@+id/button11"
                    android:layout_centerVertical="true"
                    android:background="@drawable/viewbackground"/>


                <Button
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:text="Button 1"
                    android:textColor="#fff"
                    android:id="@+id/button12"
                    android:layout_alignBottom="@+id/button11"
                    android:layout_toRightOf="@+id/view1"
                    android:layout_toEndOf="@+id/view1"
                    android:background="@drawable/text_button_selected"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/relativeLayout1"
                android:padding="10dp">

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="2"
                    android:textColor="#fff"
                    android:id="@+id/button21"
                    android:background="@drawable/icon_button_selected"/>

                <View
                    android:id="@+id/view2"
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_toRightOf="@+id/button21"
                    android:layout_centerVertical="true"
                    android:background="@drawable/viewbackground"/>


                <Button
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:text="Button 2"
                    android:textColor="#fff"
                    android:id="@+id/button22"
                    android:layout_alignBottom="@+id/button21"
                    android:layout_toRightOf="@+id/view2"
                    android:layout_toEndOf="@+id/view2"
                    android:background="@drawable/text_button_selected"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/relativeLayout2"
                android:padding="10dp">

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="3"
                    android:textColor="#fff"
                    android:id="@+id/button31"
                    android:background="@drawable/icon_button_selected"/>

                <View
                    android:id="@+id/view3"
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_toRightOf="@+id/button31"
                    android:layout_centerVertical="true"
                    android:background="@drawable/viewbackground"/>


                <Button
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:text="Button 3"
                    android:textColor="#fff"
                    android:id="@+id/button32"
                    android:layout_alignBottom="@+id/button31"
                    android:layout_toRightOf="@+id/view3"
                    android:layout_toEndOf="@+id/view3"
                    android:background="@drawable/text_button_selected"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/relativeLayout3"
                android:padding="10dp">

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="4"
                    android:textColor="#fff"
                    android:id="@+id/button41"
                    android:background="@drawable/icon_button_selected"/>

                <View
                    android:id="@+id/view4"
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_toRightOf="@+id/button41"
                    android:layout_centerVertical="true"
                    android:background="@drawable/viewbackground"/>


                <Button
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:text="Button 4"
                    android:textColor="#fff"
                    android:id="@+id/button42"
                    android:layout_alignBottom="@+id/button41"
                    android:layout_toRightOf="@+id/view4"
                    android:layout_toEndOf="@+id/view4"
                    android:background="@drawable/text_button_selected"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/relativeLayout4"
                android:padding="10dp">

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="5"
                    android:textColor="#fff"
                    android:id="@+id/button51"
                    android:background="@drawable/icon_button_selected"/>

                <View
                    android:id="@+id/view5"
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_toRightOf="@+id/button51"
                    android:layout_centerVertical="true"
                    android:background="@drawable/viewbackground"/>


                <Button
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:text="Button 5"
                    android:textColor="#fff"
                    android:id="@+id/button52"
                    android:layout_alignBottom="@+id/button51"
                    android:layout_toRightOf="@+id/view5"
                    android:layout_toEndOf="@+id/view5"
                    android:background="@drawable/text_button_selected"/>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
