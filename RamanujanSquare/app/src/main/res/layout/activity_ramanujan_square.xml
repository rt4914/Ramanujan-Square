                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:gravity="center"
                        android:text="33"
                        android:textSize="18dp"
                        android:textColor="#fff"
                        android:background="#333"/>

                    <TextView
                        android:id="@+id/tv34"
                        android:layout_width="50dp"
